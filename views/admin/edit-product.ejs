<%- include('../partials/header', { page: 'Edit Product', path: 'edit-product' }) %>
<div class="container my-3">
  <div class="row">
    <div class="col-md-6">
      <form class="form" method="POST" action="/admin/edit-product/<%= product.id %>">
        <div class="form-group">
          <label>Título do produto</label>
          <input type="text" name="title" value="<%= product.title %>" class="form-control" required/>
        </div>
        <div class="form-group">
          <label>URL Imagem</label>
          <input type="text" name="imageUrl" value="<%= product.imageUrl %>" class="form-control" required/>
        </div>
        <div class="form-group">
          <label>Preço</label>
          <input type="number"  step="0.01" name="price" value="<%= product.price %>" class="form-control" required/>
        </div>
        <div class="form-group">
          <label>Descrição</label>
          <textarea class="form-control" name="description" rows="5"><%= product.description %></textarea>
        </div>
        <button type="submit" class="btn btn-success">Editar</button>
      </form>
    </col-md-6>
  </div>
</div>
<%- include('../partials/footer') %>